{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "an action object for POST",
    "type": "object",
    "properties": {
    	"name": {
    		"description": "the name of the action",
    		"type": "string"
    		},
    	"description": {
    		"description": "description of the action",
    		"type": "string"
    	},
        "code": {
            "description": "JavaScript code",
            "type": "string"
        },
        "arguments": {
            "description": "arguments of the script",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "tags": {
            "description": "the ids of tags in the context of which the actions are executed",
            "type": "array",
            "items": {
                "type": "string"
            }
        }       	
    },
    "required": [ "name", "code", "arguments" ],
    "additionalProperties": false
}